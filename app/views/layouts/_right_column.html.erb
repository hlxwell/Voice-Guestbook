	<div class="section">
		<div class="section-title">Recent Updated Posts</div>
		<div class="section-content">

			<ul class="nice-list">
			  <% ThreadPost.recent.all.each do |post| %>
				<li>
					<div class="left"><%= link_to post.title, post %></div>
					<div class="right"><%= post.updated_at.to_s(:short) %></div>
					<div class="clearer">&nbsp;</div>
				</li>
        <% end %>

				<li><a href="/" class="more">Browse Posts &#187;</a></li>
			</ul>
		</div>
	</div>

	<div class="section">
		<div class="section-title">Latest Members</div>
		<div class="section-content">
			<ul class="nice-list">
			  <% User.limit(10).all.each do |user| %>
				<li><%= image_tag user.avatar.url(:mini), :height => 10, :width => 10 %> <%= user.login %> <span class="quiet">- <%= user.created_at.to_s(:short) %></span></li>
				<% end %>
			</ul>
		</div>
	</div>

	<div class="section">
		<div class="section-title">Tags</div>
		<div class="section-content">
			<div class="quiet" style="padding: 0px 10px 0px 10px">
			  <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
          <%= link_to tag.name, { :action => :with_tag, :id => tag.name }, :class => css_class %>
        <% end %>
			</div>
		</div>
	</div>

</div>

<div class="clearer">&nbsp;</div>